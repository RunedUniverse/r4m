<goal-execution-order-model
	xmlns="https://api.runeduniverse.net/runes4tools/r4m-geom"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="https://api.runeduniverse.net/runes4tools/r4m-geom r4m-geom-v1_0_0.xsd">

	<modelVersion>1.0.0</modelVersion>
	<goals>
		<goal id="x">
			<phases>
				<phase id="package">
					<after>
						<goal id="x" source="plugin">
							<artifactId>yy</artifactId>
						</goal>
					</after>
				</phase>
			</phases>
		</goal>
		<goal id="pack">
			<groupId>
				net.runeduniverse.tools.maven.r4m
			</groupId>
			<artifactId>r4m-maven-extension</artifactId>
			<phases>
				<phase id="package" lifecycle="default">
					<before>
						<goal id="pre-pack" source="workflow">
							<groupId>
								<!-- (opt - maven groupId) -->
								net.runeduniverse.tools.maven.r4m
							</groupId>
							<artifactId>r4m-maven-extension</artifactId>
							<when>
								<!-- (opt - always) -->
								<!-- conditions following each other inside the <when> block form 
									an OR condition -->
								<always />
								<and>
									<execution id="pipeline" />
									<packaging id="jar" />
									<lifecycle id="clean" />
									<profile id="dev-install" state="inactive" />
									<not>
										<profile id="build" state="provided" />
									</not>
								</and>
							</when>
						</goal>
					</before>
					<after>
						<goal id="wrap-pack">
							<groupId>
								<!-- (opt - maven groupId) -->
								net.runeduniverse.tools.maven.r4m
							</groupId>
							<artifactId>r4m-maven-extension</artifactId>
						</goal>
					</after>
				</phase>
			</phases>
		</goal>

	</goals>
</goal-execution-order-model>